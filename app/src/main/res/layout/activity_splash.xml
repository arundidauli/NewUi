<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SplashActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/img"
        android:foreground="@drawable/background_black_gradation"
        android:scaleType="centerCrop"
        tools:targetApi="m"
        android:contentDescription="@string/app_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/img_logo"
        android:textColor="@color/white"
        android:padding="@dimen/dimen_16dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="@string/book_an_appointment_for_salon_barber_spa"
        android:gravity="center_horizontal" />
    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_centerInParent="true"
        android:padding="@dimen/dimen_8dp"
        android:contentDescription="@string/app_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img_logo"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:padding="@dimen/dimen_16dp"
        android:text="@string/app_name"
        android:gravity="center_horizontal" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:lineSpacingExtra="6sp"
        android:padding="@dimen/dimen_16dp"
        android:textSize="12sp"
        android:textAlignment="center"
        android:layout_marginBottom="50dp"
        android:text="Saloon App Copyright (c) 2020-2021 Wingshield Technologies All rights reserved"
        android:gravity="center_horizontal" />

</RelativeLayout>